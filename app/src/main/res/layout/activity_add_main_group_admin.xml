<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_main_group_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.talarir.mapproject.AdminClasses.AddMainGroupAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/upperLinerLayoutMainAdmin"
        android:weightSum="1">

        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="enter the main group"
            android:ems="10"
            android:id="@+id/editTextMainGroup"
            android:layout_weight="0.94" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddImageMainGroupAdmin"
            android:text="img" />

        <Button
            android:id="@+id/btnAddMainGroupAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/middleLinerLayoutMainAdmin"
        android:layout_width="match_parent"
        android:layout_below="@id/upperLinerLayoutMainAdmin"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewMainAdmin"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/middleLinerLayoutMainAdmin"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/recyclerViewAdminMain"
            />
    </LinearLayout>
</RelativeLayout>
